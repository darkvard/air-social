{{define "layout"}}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Air Social Email</title>
    <style type="text/css">
        body { background-color: #f3f4f6; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; -webkit-font-smoothing: antialiased; font-size: 16px; line-height: 1.5; margin: 0; padding: 0; -ms-text-size-adjust: 100%; -webkit-text-size-adjust: 100%; width: 100% !important; }
        img { border: none; -ms-interpolation-mode: bicubic; max-width: 100%; }
        .body-table { border-collapse: separate; mso-table-lspace: 0pt; mso-table-rspace: 0pt; width: 100%; background-color: #f3f4f6; }
        .container { font-family: sans-serif; font-size: 16px; vertical-align: top; display: block; max-width: 580px; padding: 24px; width: 580px; margin: 0 auto; }
        .content-block { box-sizing: border-box; display: block; margin: 0 auto; max-width: 580px; padding: 0; }
        .main-card { border-collapse: separate; mso-table-lspace: 0pt; mso-table-rspace: 0pt; width: 100%; background: #ffffff; border-radius: 16px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); }
        .header-td { font-family: sans-serif; font-size: 16px; vertical-align: top; padding: 48px 48px 0 48px; text-align: center; }
        .header-title { margin: 0; color: #111827; font-weight: 800; font-size: 32px; letter-spacing: -0.025em; line-height: 1; }
        .content-wrapper { font-family: sans-serif; font-size: 16px; vertical-align: top; box-sizing: border-box; padding: 48px; }
        @media only screen and (max-width: 620px) {
            .container { width: 100% !important; padding: 0 !important; }
            .content-block { padding: 16px !important; }
            .content-wrapper { padding: 24px !important; }
            .header-td { padding: 32px 24px 0 24px !important; }
            .header-title { font-size: 24px !important; margin-bottom: 8px !important; }
        }
    </style>
</head>
<body>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body-table">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content-block">
                    <table role="presentation" class="main-card">
                        <tr>
                            <td class="header-td">
                                <h1 class="header-title">Air Social</h1>
                            </td>
                        </tr>
                        <tr>
                            <td class="content-wrapper">
                                {{template "content" .}}
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
</body>
</html>
{{end}}